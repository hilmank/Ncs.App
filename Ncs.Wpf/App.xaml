<Application x:Class="Ncs.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ncs.Wpf.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Default Theme -->
                <ResourceDictionary Source="Themes/LightTheme.xaml"/>
                <ResourceDictionary Source="Themes/ThemeStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:TextToVisibilityConverter x:Key="PlaceholderConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
